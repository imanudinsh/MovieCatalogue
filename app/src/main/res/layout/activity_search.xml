<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionName="container"
        android:background="@color/colorBacground"
        tools:context=".view.favorite.FavoriteActivity">


    <android.support.design.widget.AppBarLayout
            android:id="@+id/main_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white"
            app:elevation="0dp">


        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin"
                app:contentInsetStartWithNavigation="0dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:theme="@style/ThemeOverlay.AppCompat.Light"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/margin_padding_8dp">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_rounded_gradient"
                    android:backgroundTint="@color/colorBacground"
                    android:paddingStart="@dimen/margin_padding_16dp"
                    android:paddingEnd="0dp"
                    android:layout_marginEnd="@dimen/margin_padding_16dp"
                    android:layout_marginTop="@dimen/margin_padding_8dp"
                    android:layout_marginBottom="@dimen/margin_padding_8dp">


                <EditText
                        android:id="@+id/et_search"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:textColor="@color/black"
                        android:hint="@string/hint_search"
                        android:fontFamily="@font/exo"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:singleLine="true"/>

                <LinearLayout
                        android:id="@+id/btn_search"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:padding="@dimen/margin_padding_8dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:background="@drawable/bg_rounded_gradient"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:focusable="true">
                    <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_search"
                            android:tint="@color/white"
                            android:contentDescription="@string/desc_ic_movie"
                            android:layout_marginEnd="@dimen/margin_padding_8dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="@string/text_btn_search"
                            android:textSize="12sp"
                            android:textAllCaps="true"
                            android:layout_marginEnd="@dimen/margin_padding_8dp"
                            android:fontFamily="@font/exo_bold"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>



    <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.1"
            android:background="@color/grey"
            app:layout_constraintTop_toBottomOf="@+id/main_appbar"/>
    <android.support.v4.widget.NestedScrollView
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:background="@color/colorBacground"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <android.support.v7.widget.CardView
                    android:id="@+id/btn_expand_movie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_padding_8dp"
                    android:layout_marginBottom="@dimen/margin_padding_8dp"
                    android:layout_marginStart="@dimen/margin_padding_16dp"
                    android:layout_marginEnd="@dimen/margin_padding_16dp"
                    app:cardUseCompatPadding="false"
                    android:background="@color/white"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="8dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/margin_padding_8dp"
                    android:paddingBottom="@dimen/margin_padding_8dp"
                    android:paddingStart="@dimen/margin_padding_16dp"
                    android:paddingEnd="@dimen/margin_padding_16dp">
                <TextView
                        android:id="@+id/tv_text_result_movie"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:fontFamily="@font/exo_bold"
                        />

                <ImageView
                        android:id="@+id/iv_arrow_movie"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_arrow_up"
                    />
            </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_movie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/item_row"
                    android:clipToPadding="false"
                    android:visibility="visible"
                    />
            <android.support.v7.widget.CardView
                    android:id="@+id/btn_expand_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_padding_8dp"
                    android:layout_marginBottom="@dimen/margin_padding_8dp"
                    android:layout_marginStart="@dimen/margin_padding_16dp"
                    android:layout_marginEnd="@dimen/margin_padding_16dp"
                    app:cardUseCompatPadding="false"
                    android:background="@color/white"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="8dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/margin_padding_8dp"
                        android:paddingBottom="@dimen/margin_padding_8dp"
                        android:paddingStart="@dimen/margin_padding_16dp"
                        android:paddingEnd="@dimen/margin_padding_16dp">
                    <TextView
                            android:id="@+id/tv_text_result_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:fontFamily="@font/exo_bold"
                            />

                    <ImageView
                            android:id="@+id/iv_arrow_tv"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_arrow_up"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/item_row"
                    android:clipToPadding="false"
                    android:visibility="visible"
                    />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


    <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"/>

    <LinearLayout
            android:id="@+id/view_no_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingStart="@dimen/margin_padding_32dp"
            android:paddingEnd="@dimen/margin_padding_32dp"
            android:alpha="0.5"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:visibility="gone">
        <ImageView
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:src="@drawable/ic_food"
                android:layout_gravity="center"
                android:contentDescription="@string/desc_ic_movie"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oops.."
                android:textColor="@color/black"
                android:fontFamily="@font/exo_bold"
                android:textSize="20sp"/>
        <TextView
                android:id="@+id/tv_no_data"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/error_msg_search_not_found"
                android:textColor="@color/black"
                android:fontFamily="@font/exo"
                android:textSize="10sp"/>
    </LinearLayout>






</android.support.constraint.ConstraintLayout>